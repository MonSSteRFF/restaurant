generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  login        String
  email        String @unique
  password     String
  unique123123 String @default("unique123123")
  unique322322 String @default("unique322322")
  role         String @default("USER")
  refreshToken String @default("")
}
